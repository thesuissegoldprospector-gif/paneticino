rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function docExists() {
      return resource != null;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && docExists();
    }
    
    function isApprovedBaker() {
        // Check for the existence of the baker profile document for the current user.
        let bakerDocExists = exists(/databases/$(database)/documents/bakers/$(request.auth.uid));
        // If it exists, check the approvalStatus. This prevents errors for non-baker users.
        return bakerDocExists && get(/databases/$(database)/documents/bakers/$(request.auth.uid)).data.approvalStatus == 'approved';
    }

    // ----------------------------------------------------------------
    // USERS
    // ----------------------------------------------------------------
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();

      allow create: if isOwner(userId)
        && request.resource.data.id == userId
        && (request.resource.data.role == 'customer'
            || request.resource.data.role == 'baker');

      allow update: if (isExistingOwner(userId) || isAdmin())
        && request.resource.data.id == resource.data.id
        && request.resource.data.role == resource.data.role
        && request.resource.data.registrationDate == resource.data.registrationDate;

      allow delete: if isExistingOwner(userId) || isAdmin();

      // Cart Subcollection
      match /cart/{cartItemId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ----------------------------------------------------------------
    // CUSTOMERS
    // ----------------------------------------------------------------
    match /customers/{customerId} {
      allow get: if isOwner(customerId) || isAdmin();
      allow list: if false;

      allow create: if isOwner(customerId)
        && request.resource.data.userId == customerId;

      allow update: if (isExistingOwner(customerId) || isAdmin())
        && request.resource.data.userId == resource.data.userId;

      allow delete: if isExistingOwner(customerId) || isAdmin();
    }

    // ----------------------------------------------------------------
    // BAKERS
    // ----------------------------------------------------------------
    match /bakers/{bakerId} {
      // Public read access for all baker profiles. 
      // Client-side queries should filter for 'approved' status for public listings.
      allow read: if true;

      allow create: if isOwner(bakerId)
        && request.resource.data.userId == bakerId
        && request.resource.data.approvalStatus == 'pending';

      allow update: if
        (
          isExistingOwner(bakerId)
          && request.resource.data.userId == resource.data.userId
          && request.resource.data.approvalStatus == resource.data.approvalStatus
        )
        || isAdmin();

      allow delete: if isAdmin();
    }

    // ----------------------------------------------------------------
    // PRODUCTS
    // ----------------------------------------------------------------
    match /products/{productId} {
      allow read: if true;
      allow create: if isSignedIn() && request.resource.data.bakerId == request.auth.uid && isApprovedBaker();
      allow update, delete: if isSignedIn() && resource.data.bakerId == request.auth.uid && isApprovedBaker();
    }
    
    // ----------------------------------------------------------------
    // ORDERS
    // ----------------------------------------------------------------
     match /orders/{orderId} {
      // CREATE: A signed-in user can create an order for themselves.
      allow create: if isSignedIn() && request.resource.data.customerId == request.auth.uid;

      // READ (GET): 
      // - An admin can read any order.
      // - A user can read an order if they are the customer or the baker.
      allow get: if isAdmin() || 
                  (isSignedIn() && resource.data.customerId == request.auth.uid) || 
                  (isSignedIn() && resource.data.bakerId == request.auth.uid);
      
      // READ (LIST):
      // An authenticated user can attempt to list orders.
      // Security is enforced by the 'get' rule in combination with client-side queries
      // (e.g., where("customerId", "==", auth.uid)) which ensures users only see their own orders.
      // Admins can list all orders because their 'get' rule passes for all documents.
      allow list: if isSignedIn();
      
      // UPDATE: Only the approved baker fulfilling the order can update its status.
      allow update: if isSignedIn() && resource.data.bakerId == request.auth.uid && isApprovedBaker();
      
      // DELETE: Orders cannot be deleted.
      allow delete: if false;
    }

    // ----------------------------------------------------------------
    // SPONSORS
    // ----------------------------------------------------------------
    match /sponsors/{sponsorId} {
      allow read: if true;
      // TEMPORARY RULE FOR LOCAL DEV: Allows any logged-in user to write.
      // PRODUCTION RULE should be: allow write: if isAdmin();
      allow write: if isSignedIn();
    }

    // ----------------------------------------------------------------
    // ADMIN ROLES
    // ----------------------------------------------------------------
    match /roles_admin/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create, update, delete: if false;
    }
  }
}

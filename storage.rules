rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- Avatars ---
    // Any authenticated user can upload/update their own avatar.
    // Admins can also modify avatars.
    match /avatars/{userId}/{fileName} {
      allow read: if true; // Profile pictures are public
      allow write: if isOwner(userId) || isAdmin();
    }

    // --- General Images (Products, Cover Photos etc.) ---
    // Any authenticated user can write to their own folder.
    // Admins have full write access.
    // All authenticated users can read all images.
    match /images/{userId}/{fileName} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId) || isAdmin();
    }
  }
}

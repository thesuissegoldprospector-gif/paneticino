rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regola generale: permette la lettura a chiunque e la scrittura solo agli utenti autenticati.
    // Questo Ã¨ sufficientemente sicuro per un ambiente di sviluppo e sblocca gli upload.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}

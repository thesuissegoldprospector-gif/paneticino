rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    // --- Avatars ---
    // Any authenticated user can upload their own avatar.
    match /avatars/{userId}/{fileName} {
      allow read: if true; // Profile pictures are public
      allow write: if isOwner(userId);
    }

    // --- General Images (Products, Cover Photos etc.) ---
    // Any authenticated user can upload general images to their own folder.
    match /images/{userId}/{fileName} {
      allow read: if true; // Images are public
      allow write: if isOwner(userId);
    }
  }
}

rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function
    function isSignedIn() {
      return request.auth != null;
    }

    // Avatar images: An authenticated user can only write to their own folder.
    // Any authenticated user can read.
    match /avatars/{userId}/{filename} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Product/Order images: An authenticated user can only write to their own folder.
    // Any authenticated user can read.
    match /images/{userId}/{filename} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}
